# ===================================
# eLunch API Directory Security - Hostinger Compatible
# ===================================
# Compatible with Hostinger shared hosting

# Deny access to .env files
<Files ".env">
    Require all denied
</Files>

# Deny access to .env.example
<Files ".env.example">
    Require all denied
</Files>

# Allow only POST requests to send-email.php
<Files "send-email.php">
    <LimitExcept POST>
        Require all denied
    </LimitExcept>
</Files>

# Allow access to send-email.php for normal POST requests
<Files "send-email.php">
    Require all granted
</Files>

# Deny access to .htaccess file itself
<Files ".htaccess">
    Require all denied
</Files>

# Prevent directory browsing
Options -Indexes

# Allow PHP execution in this directory
<Files "*.php">
    Require all granted
</Files>

# Security headers (Hostinger compatible)
<IfModule mod_headers.c>
    Header always set X-Content-Type-Options "nosniff"
    Header always set X-Frame-Options "SAMEORIGIN"
    Header always set X-XSS-Protection "1; mode=block"
    Header always set Access-Control-Allow-Origin "https://mielunch.com"
    Header always set Access-Control-Allow-Methods "POST, OPTIONS"
    Header always set Access-Control-Allow-Headers "Content-Type"
</IfModule>

# Disable server signature
ServerSignature Off
